---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<script type="module" client:load>
		document.addEventListener( () => {
			const menuToggle = document.getElementById('menu-toggle');
			const menu = document.getElementById('menu');
		  
			menuToggle.addEventListener('click', () => {
			  menu.classList.toggle('hidden');
			});
		  });
	</script>
	<nav>
	  <h2><a href="/">{SITE_TITLE}</a></h2>
  
	  <!-- Hamburger Button -->
	  <button id="menu-toggle" class="hamburger" aria-label="Toggle navigation">
		â˜°
	  </button>

	  <!-- Normal navigation hidden in small displays -->
	  <div class="social-links">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/aboutme">About me</HeaderLink>
	   	<HeaderLink href="/blog">Blog</HeaderLink>
	  </div>
	  
		
	  <!-- Internal Links (hidden by default on smaller screens) -->
	  <div id="menu" class="internal-links hidden">
		<HeaderLink href="/index">Home</HeaderLink>
		<HeaderLink href="/aboutme">About me</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
	  </div>
  
	  <!-- Social Links -->
	  <div class="social-links">
		<a href="https://www.linkedin.com/in/0xcheth/" target="_blank">
		  <span class="sr-only">Find me on Linkedin!</span>
		  <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
			<path
			  fill="currentColor"
			  d="M0 1.146C0 .513.324 0 .722 0h14.556c.398 0 .722.513.722 1.146v13.708c0 .633-.324 1.146-.722 1.146H.722A.723.723 0 0 1 0 14.854V1.146zm4.943 12.248V5.937H2.542v7.457h2.401zm-1.2-8.493c.837 0 1.358-.554 1.358-1.248-.015-.711-.52-1.247-1.342-1.247-.822 0-1.357.536-1.357 1.247 0 .694.52 1.248 1.327 1.248h.014zM13.356 12.36V9.359c0-1.61-.305-2.707-2.145-2.707-1.004 0-1.675.55-1.954 1.076h-.028V5.937H6.828c.029.654 0 7.457 0 7.457h2.401v-4.16c0-.222.016-.444.082-.603.181-.444.594-.905 1.288-.905.909 0 1.273.683 1.273 1.683v3.985h2.401z"
			></path>
		  </svg>
		</a>
		<a href="https://github.com/0xcheth/0xcheth.github.io" target="_blank">
		  <span class="sr-only">Go to Astro's GitHub repo</span>
		  <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
			<path
			  fill="currentColor"
			  d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
			></path>
		  </svg>
		</a>
	  </div>
	</nav>
</header>


<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
